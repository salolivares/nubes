{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "module": "esnext",
      "target": "esnext",
      "sourceMap": false,
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "strict": true,
      "isolatedModules": true,
      "types": ["node"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@common": ["../common/src"]
      }
    },
    "include": ["src/**/*.ts", "../../types/**/*.d.ts", "../common/src/**/*.ts"],
    "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}